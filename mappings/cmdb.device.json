{
    "template": "cmdb.device*",
    "settings": {
        "number_of_shards": 5,
        "number_of_replicas": 1
    },
    "mappings": {
        "_default_": {
            "_timestamp": {
                "enabled": true
            },
            "_source": {
                "enabled": true
            },
            "dynamic": "strict",
            "dynamic_templates": [{
                "template_suggest": {
                    "match": "*_suggest",
                    "match_mapping_type": "completion",
                    "mapping": {
                        "type": "completion",
                        "analyzer": "ik_max_word",
                        "search_analyzer": "ik_max_word",
                        "payloads": false
                    }
                }
            }],
            "properties": {
                "NO": {
                    "type": "string",
                    "index": "analyzed"
                },
                "deviceSn": {
                    "type": "string",
                    "index": "analyzed"
                },
                "brand": {
                    "type": "string",
                    "index": "analyzed"
                },
                "model": {
                    "type": "string",
                    "index": "analyzed"
                },
                "used": {
                    "type": "boolean"
                },
                "content": {
                    "type": "string",
                    "index": "no"
                },
                "hostname": {
                    "type": "string",
                    "index": "analyzed"
                },
                "createdAt": {
                    "type": "date",
                    "index": "analyzed",
                    "format": "strict_date_optional_time||epoch_millis"
                },
                "entryAt": {
                    "type": "date",
                    "index": "analyzed",
                    "format": "strict_date_optional_time||epoch_millis"
                },
                "depart": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "departName": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "user": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "userName": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "brand_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                },
                "model_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                }
            }
        },
        "computer": {
            "properties": {
                "BU": {
                    "type": "string",
                    "index": "not_analyzed"
                },

                "cpu": {
                    "type": "string",
                    "index": "analyzed"
                },
                "disk": {
                    "type": "string",
                    "index": "analyzed"
                },
                "ram": {
                    "type": "string",
                    "index": "analyzed"
                },
                "os": {
                    "type": "string",
                    "index": "analyzed"
                },
                "ip": {
                    "type": "ip"
                },
                "cpu_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                },
                "disk_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                },
                "ram_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                },
                "os_suggest": {
                    "type": "completion",
                    "analyzer": "ik_max_word",
                    "search_analyzer": "ik_max_word",
                    "payloads": false
                }
            }
        },
        "printer": {
            "properties": {
                "position": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "ip": {
                    "type": "ip"
                }
            }
        },
        "ap": {
            "properties": {
                "position": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "mac": {
                    "type": "string",
                    "index": "not_analyzed"
                }
            }
        },
        "other": {

        }
    }
}
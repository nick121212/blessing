md-toolbar.md-whiteframe-glow-z1()
    div.md-toolbar-tools(fx-toolbar,ng-model="homeCtl.toolbarTop")
    div.md-toolbar-tools
        md-button(ng-click="homeCtl.doOpenNav($event)",aria-label="打开菜单")
            div(layout="row")
                md-icon
                    ng-md-icon(icon="dashboard")
                h2(layout-padding) {{ $root.title }}
        span(flex)
        div.md-toolbar-item(layout="row")
            md-button.md-icon-button(aria-label="打开菜单",ng-click="homeCtl.doOpenNav($event,'right')")
                md-tooltip 打开菜单
                div(layout="row")
                    md-icon
                        ng-md-icon(icon="more_vert")
                    span {{$root.user.nickname}}
md-content(flex="100")
    md-sidenav.md-sidenav-left(ui-view="sidenavLeft",md-is-locked-open="$mdMedia('gt-md')",md-component-id="left",md-whiteframe="4",layout="column")
    md-sidenav.md-sidenav-right(md-component-id="right",ui-view="sidenavRight",layout="column",md-whiteframe="4")
    md-content.side-right(ui-view="content",flex="100",layout="column")
md-content(layout="column",layout-padding)
    div.logo.center(flex)
    form(name="loginForm")
        div(fx-form-action,key="{{loginCtl.key}}",ng-model="loginCtl.formData",layout="column",ng-submit="loginCtl.doSubmit(loginForm)")
    div(layout="row",layout-align="space-around center")
        md-button(ng-click="loginCtl.doSubmit(loginForm)")
            md-icon
                ng-md-icon(icon="login")
            span Login In
    md-divider
    div(layout="row",layout-align="space-around center")
        md-button.md-icon-button(href="/passport/auth/gitlab")
            md-tooltip GITLAB
            md-icon
                ng-md-icon(icon="github-circle")

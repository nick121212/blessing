md-button(ng-class="btnCtl.className",aria-label="{{btnCtl.title}}",ng-click="btnCtl.onClick($event,btnCtl)")
    md-tooltip(ng-if="btnCtl.tooltip",md-direction="{{btnCtl.tooltip.position}}") {{btnCtl.tooltip.title || btnCtl.title}}
    md-icon(ng-if="btnCtl.icon")
        ng-md-icon(icon="{{btnCtl.icon.icon}}",ng-style ="btnCtl.icon.style")
    span(ng-if="btnCtl.showTitle",layout-padding) {{btnCtl.title}}